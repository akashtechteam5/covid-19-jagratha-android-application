<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data><variable
        name="viewmodel"
        type="com.ioss.covid.viewModel.QuestionsViewModel" /></data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.QuestionsActivity">
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/questionsRV"
    android:layout_height="0dp"
    android:layout_width="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/submitBT"
    />
    <Button
        android:id="@+id/submitBT"
        style="@style/style_bt_basic"
        android:layout_height="40dp"
        android:layout_width="0dp"
        android:textColor="@android:color/white"
        android:text="@string/submit"
        android:layout_marginBottom="@dimen/margin_default"
        android:background="@drawable/bg_button_basic_curved"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>